{% extends 'dashboard/dashboard.html.twig' %}
{% set sectionSociete = true %}
{% block wrapper %}
            <div class="card-header">{{ 'Gestion des Fonctions'|trans }}</div>
            <br>

                {% include '_flash.html.twig' %}
                <div>
                    <div class="col-xs-12">
                        <div id="btn-thematic-create" class="btn btn-ps pull-right adjust">
                            <button id="showModalCreate" class="btn badge-success" data-route="create_fonction" data-title="{{ 'label.edit.create'|trans }}"> <a class="text-light fa fa-plus-circle" href="#">Ajouter</a></button>
                        </div>
                        <br>
                    </div>
                    <div class="btn-group" role="group" aria-label="Button group">
                        <input type="text" class="form-control-lg" placeholder="Recherche ..." id="search_box">
                    </div>
                </div>

                <table id="listAdmin" class="table">
                    <thead>
                    <tr>
                        <th>{{ 'column.libelle'|trans }}</th>
                        <th>Profil</th>
                        <th>{{ 'column.actif'|trans }}</th>
                        <th>{{ 'column.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for fonction in fonctions %}
                        <tr>
                            <td>{{ fonction.libele }}</td>
                            <td>{{ fonction.profil?fonction.profil.libele:'' }}</td>
                            <td>{{ fonction.enable?'OUI':'NON' }}</td>
                            <td  style="width:15%; text-align: center; padding-right: 8px !important;">
                                <button  data-target="#modalPassword" data-title="{{ 'label.edit.create'|trans }}" data-route="edit_fonction" class="btn btn-link text-danger btn-edit" data-id="{{ fonction.id }}" type="button"><i class="fa fa-edit"></i></button>
                                <button  data-target="#modalPassword" data-title="{{ 'label.delete'|trans }}" data-route="delete_fonction" class="btn btn-link text-danger btn-remove" data-id="{{ fonction.id }}" type="button"><i class="fa fa-trash-o"></i></button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
    {% include 'user/popup.html.twig'  with {
        'sectionUser' : sectionSociete,
        'form' : formFonction,
        'title' : 'Ajout/Modification fonction'|trans
    } %}
{% endblock %}