{% extends 'dashboard/dashboard.html.twig' %}

{% block title %}{{ parent() }} | Niveau de d√©cision {% endblock %}
{% block wrapper %}
    <div class="card-header">
        <h2>{{ 'label.titre.niveauDecision'|trans }}</h2>
    </div>
    <div class="card-body">
        {% include '_flash.html.twig' %}
        <div class="listing-bloc relative-bloc">
            <div class="btn-group wrap-btn">
                <button id="showModalCreate" class="btn btn-success"data-route="niveau_decision_new" data-title="{{ 'label.title.ajout'|trans }}"><i class="icon-plus-circle"></i><span>Ajouter</span></button>
            </div>
            <div class="table-responsive">
                <table id="listNiveauDecision" class="table table-striped">
                    <thead>
                        <tr>
                            <th><span>{{ 'column.libelle'|trans }}</span></th>
                            <th><span>{{ 'column.actif'|trans }}</span></th>
                            <th class="actions"><span>{{ 'column.actions'|trans }}</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for niveau_decision in niveau_decisions %}
                            <tr>
                                <td>{{  niveau_decision.libelle }}</td>
                                <td>{{  niveau_decision.isActif ? 'OUI' : 'NON' }} </td>
                                <td class="actions">
                                    <button data-route="niveau_decision_edit" data-title="{{ 'label.title.modification'|trans }}" class="btn-edit" data-id="{{ niveau_decision.id }}" type="button"><i class="icon-edit"></i></button>
                                    <button data-route="niveau_decision_delete" data-title="{{ 'label.titre.delete'|trans }}" class="btn-remove" data-id="{{ niveau_decision.id }}" type="button"><i class="icon-trash"></i></button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% include '/Admin/Popup/modal.html.twig' %}
    </div>
{% endblock %}