{% extends 'dashboard/dashboard.html.twig' %}

{% block body %}

    <body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show pace-done pace-done">
    <header class="app-header navbar">
        {% include 'nav-bar.html.twig' %}
        <!-- onglets pour la création dossier -->
        <nav class="tabs-dossier">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link {% if currentTab is defined and currentTab == 'declaration' %}show active {% endif %}" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Déclaration</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if currentTab is defined and currentTab == 'intervenant' %}show active {% endif %}" id="intervenant-tab" data-toggle="tab" href="#intervenant" role="tab" aria-controls="intervenant" aria-selected="false">Intervenants</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if currentTab is defined and currentTab == 'auxiliaires' %}show active {% endif %}" id="auxiliaires-tab" data-toggle="tab" href="#auxiliaires" role="tab" aria-controls="auxiliaires" aria-selected="false">Autres auxiliaires</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if currentTab is defined and currentTab == 'cloture' %}show active {% endif %}" id="cloture-tab" data-toggle="tab" href="#cloture" role="tab" aria-controls="cloture" aria-selected="false">Clôture</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if currentTab is defined and currentTab == 'historique' %}show active {% endif %}" id="historique-tab" data-toggle="tab" href="#historique" role="tab" aria-controls="historique" aria-selected="false">Historique</a>
                    </li>
            </ul>
        </nav>
        <!-- onglets pour la création dossier -->
    </header>
    <div class="app-body body-dossier" >
        <div class="sidebar" id="bg_sidebar">
            {% include 'side-bar.html.twig' %}
        </div>
        <main class="main">
            <!-- Breadcrumb-->
            <div class="container-fluid">
                {{ include('_flash.html.twig') }}
                {% include 'nav-tabs.html.twig' %}
                <div id="ui-view">
                    <div class="animated fadeIn">
                        <div class="card">
                            {% block wrapper %}

                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <!-- CoreUI and necessary plugins-->
    </body>

{% endblock %}