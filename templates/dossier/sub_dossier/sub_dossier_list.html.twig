<div class="table-responsive">
    <table id="listSubdossier" class="table table-striped">
        <thead>
            <th><span>Numéro dossier</span></th>
            <th><span>Libellé</span></th>
            {% if app.user.hasRole("ROLE_SUPERADMIN") or app.user.hasRole("ROLE_ADMIN") %}  <th><span>Actions</span></th> {% endif %}
        </thead>
        <tbody>
            {% if dossier is defined %}
                {% for subDossier in dossier.subDossiers %}
                    <tr>
                        <td>{{ subDossier.numeroSubDossier }}</td>
                        <td>{{ subDossier.libelle }}</td>
                        <td class="actions">
                            <button  data-target="" data-title="{{ 'label.edit.create'|trans }}" data-route="edit_sub_dossier" class="btn-edit" data-id="{{ subDossier.id }}" type="button"><i class="icon-edit"></i></button>
                            {% if app.user.hasRole("ROLE_SUPERADMIN") or app.user.hasRole("ROLE_ADMIN") %}   <button  data-target="" data-title="{{ 'label.delete'|trans }}" data-route="delete_sub_dossier" class="btn-remove" data-id="{{ subDossier.id }}" type="button"><i class="icon-trash"></i></button>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
</div>