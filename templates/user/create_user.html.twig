<div class="form-bloc standard-form">
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    {{ form_start(form, {'attr': {'id': 'formCreateUser','class': 'form-horizontale fos_user_registration_register'}}) }}
    <div class="row">
        <div class="form-group col-xl-6">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
        </div>

        <div class="form-group col-xl-6">
            {{ form_label(form.lastname) }}
            {{ form_widget(form.lastname) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-xl-6">
            {{ form_label(form.societe) }}
            {{ form_widget(form.societe) }}
        </div>

        <div class="form-group col-xl-6">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-xl-6">
            {{ form_label(form.phoneNumber) }}
            <div class="row">
                <div class="col-md-3">
                    {{ form_widget(form.prefixPhone) }}
                </div>
                <div class="col-md-9">
                    {{ form_widget(form.phoneNumber) }}
                </div>
            </div>
        </div>
        <div class="form-group col-xl-6">
            {{ form_label(form.profile) }}
            {{ form_widget(form.profile) }}
        </div>
    </div>
            {{ form_rest(form) }}
    <div class="btns-group">
        <input type="submit" data-dismiss="modal" id="cancel" class="btn btn-default" value="{{ 'label.cancel'|trans }}" />
        <input type="submit" id="saveCreateUser" class="btn btn-primary" value="{{ 'label.save'|trans }}" />
    </div>
    {{ form_end(form) }}
</div>