{% extends 'dashboard/dashboard.html.twig' %}

{% set sectionUser = true %}
{% block wrapper %}
    <div class="card-header">
        <h2>{{ 'label.gestion.user'|trans }}</h2>
    </div>
    <div class="card-body">
        {% include '_flash.html.twig' %}
        <div class="listing-bloc relative-bloc">
            <div class="btn-group wrap-btn">
                <button id="showModalCreate" class="btn btn-success" data-title="{{ 'label.edit.create'|trans }}" data-route="create_user"> <i class="icon-plus-circle"></i><span>Ajouter</span></button>
            </div>
            <div class="table-responsive">
                <table id="listUser" class="table table-striped">
                    <thead>
                        <tr>
                            <th><span>Nom</span></th>
                            <th><span>Prénoms</span></th>
                            <th><span>Entité</span></th>
                            <th><span>Email</span></th>
                            <th><span>Téléphone</span></th>
                            <th><span>Profil</span></th>
                            <th><span>Actif</span></th>
                            <th class="actions"><span>{{ 'column.actions'|trans }}</span></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.name }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.societe }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.prefixPhone !=''?user.prefixPhone~user.phoneNumber :user.phoneNumber }}</td>
                            <td>{{ user.profile }}</td>
                            <td>{{ user.isActif?'OUI':'NON' }}</td>
                            <td class="actions">
                                <button  data-target="#modalPassword" data-title="{{ 'label.edit.create'|trans }}" data-route="edit_user" class="btn-edit" data-id="{{ user.id }}" type="button"><i class="icon-edit"></i></button>
                                {#<button  data-target="#modalPassword" data-title="{{ 'label.delete'|trans }}" data-route="delete_user" class="btn-remove" data-id="{{ user.id }}" type="button"><i class="icon-trash"></i></button>#}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {% include 'user/popup.html.twig'  with {
            'sectionUser' : sectionUser,
            'form' : formUser
        } %}
    </div>
{% endblock %}
