{% extends 'dashboard/dashboard.html.twig' %}
{% set sectionUser = true %}
{% block wrapper %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <h1>Gestion des utilisateurs</h1>

                {% include '_flash.html.twig' %}
                <div>
                    <div class="col-xs-12">
                        <div id="btn-thematic-create" class="btn btn-ps pull-right adjust">
                            <button id="showModalCreateUser" data-title="{{ 'label.edit.create.user'|trans }}" data-route="create_user" style="background-color:#3a9d5d; float: right"> <a class="text-light fa fa-plus-circle" href="#">Ajouter</a></button>
                        </div>
                    </div>
                    <div class="btn-group" role="group" aria-label="Button group">
                        <input type="text" class="form-control-lg" placeholder="Recherche ..." id="search_box">
                    </div>
                </div>

                <table id="listUser" class="table">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénoms</th>
                            <th>Entité</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th>Profil</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.name }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.societe }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.phoneNumber }}</td>
                            <td>

                                <button  data-target="#modalPassword" data-title="{{ 'label.edit.create.user'|trans }}" data-route="edit_user" class="btn btn-link text-danger btn-edit-user" data-id="{{ user.id }}" type="button"><i class="fa fa-edit"></i></button>
                                <button  data-target="#modalPassword" data-title="{{ 'label.delete.user'|trans }}" data-route="delete_user" class="btn btn-link text-danger btn-remove-user" data-id="{{ user.id }}" type="button"><i class="fa fa-trash-o"></i></button>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>
    {% include 'user/popup.html.twig'  with {
        'sectionUser' : sectionUser,
        'form' : formUser,
        'title' : 'ajout/modification utilisateur'|trans
    } %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('user') }}
{% endblock %}