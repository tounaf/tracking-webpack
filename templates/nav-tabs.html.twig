
{% set isGranted = false %}
{% if dossier is defined %}
    {% set isGranted = true %}
    {{ dossier.referenceDossier }}
{% endif %}
<div class="">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="declaration-tab" data-toggle="tab" href="#declaration" role="tab" aria-controls="declaration" aria-selected="true">Déclaration</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if isGranted is defined and isGranted == false %} disabled {% endif %}" id="intervenant-tab" data-toggle="tab" href="#intervenant" role="tab" aria-controls="intervenant" aria-selected="false">Intervenants</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if isGranted is defined and isGranted == false %} disabled {% endif %}" id="auxiliaire-tab" data-toggle="tab" href="#auxiliaire" role="tab" aria-controls="auxiliaire" aria-selected="false">Autres auxiliaires</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if isGranted is defined and isGranted == false %} disabled {% endif %}" id="cloture-tab" data-toggle="tab" href="#cloture" role="tab" aria-controls="cloture" aria-selected="false">Clôture</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if isGranted is defined and isGranted == false %} disabled {% endif %}" id="historique-tab" data-toggle="tab" href="#historique" role="tab" aria-controls="historique" aria-selected="false">Historique</a>
        </li>
    </ul>
</div>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="declaration" role="tabpanel" aria-labelledby="declaration-tab">
        {% if form is defined and form is not null %}
            {{ include('dossier/form.html.twig') }}
        {% else %}
        {{ render(controller('App\\Controller\\Admin\\DossierController::createDossier')) }}
        {% endif %}
    </div>

    <div class="tab-pane fade" id="intervenant" role="tabpanel" aria-labelledby="intervenant-tab">
        {% if isGranted is defined and isGranted == true %}
        {#{{ render(controller('App\\Controller\\IntervenantController::index')) }}#}
        {% endif %}
    </div>
    <div class="tab-pane fade" id="auxiliaire" role="tabpanel" aria-labelledby="auxiliaire-tab">
        {% if isGranted is defined and isGranted == true %}
        {#{{ render(controller('App\\Controller\\AuxiliairesController::index')) }}#}
        {% endif %}
    </div>

    <div class="tab-pane fade show active" id="cloture" role="tabpanel" aria-labelledby="cloture-tab">
        {#{% if form is defined and form is not null %}#}
        {#{% else %}#}
    </div>
    <div class="tab-pane fade" id="historique" role="tabpanel" aria-labelledby="historique-tab">
        {% if isGranted is defined and isGranted == true %}
            {{ render(controller('App\\Controller\\Admin\\HistoryController::index', {id: dossier.id})) }}
        {% endif %}
    </div>
</div>