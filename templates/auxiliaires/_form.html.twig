{{ form_start(formAuxi)}}}
{% if formAuxi is defined %}
    <div class="row">
        <div class="card">
            <div class="card-header">
                AUTRES INTERVENANTS INTERVENUS DE L'AFFAIRE
            </div>
            <div class="card-body">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_row(formAuxi.nomPrenom) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(formAuxi.adresse) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_row(formAuxi.email) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(formAuxi.telephone) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_row(formAuxi.fonction) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                HONORAIRES
            </div>
            <div class="card-body">

                <div class="form-row">
                    <div class="form-group col-md-4">
                        {{ form_row(formAuxi.prestation) }}
                    </div>
                    <div class="form-group col-md-4">
                        {{ form_row(formAuxi.convenu) }}
                    </div>
                    <div class="form-group col-md-3">
                        {{ form_row(formAuxi.devise) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        {{ form_row(formAuxi.payer) }}
                    </div>
                    <div class="form-group col-md-2">
                        <label for="deviseAuxi">Devise</label>
                        <input type="text" class="form-control" id="devise1Auxi">
                    </div>
                    <div class="form-group col-md-3">
                        {{ form_row(formAuxi.restePayer) }}
                    </div>
                    <div class="form-group col-md-2">
                        <label for="devise2Auxi">Devise</label>
                        <input type="text" class="form-control" id="devise2Auxi">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6" hidden>
                        {{ form_row(formAuxi.statutIntervenant) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="button" data-dismiss="modal" id="cancel" class="btn btn-dark" value="{{ 'label.cancel'|trans }}"/>
        <input type="submit" id="saveCreateUser" class="btn btn-danger" value="{{ 'label.save'|trans }}"/>
    </div>
{% endif %}
{{ form_end(formAuxi) }}