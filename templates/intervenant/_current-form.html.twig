{{ form_start(form_intervenant) }}
<div>
    <div class="row">

        <div class="col-sm-6">
            AVOCAT EN CHARGE DE L'AFFAIRE
            <div class="card">
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_row(form_intervenant.nomPrenom) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_row(form_intervenant.adresse) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_row(form_intervenant.email) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_row(form_intervenant.telephone) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            HONORAIRES
            <div class="card">
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_row(form_intervenant.prestation) }}
                        </div>
                        <div class="form-group col-md-4">
                            {{ form_row(form_intervenant.convenu) }}
                        </div>
                        <div class="form-group col-md-2">
                            {{ form_row(form_intervenant.devise) }}

                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            {{ form_row(form_intervenant.payer) }}
                        </div>
                        <div class="form-group col-md-2">
                            <label for="devi">{{ 'label.devise'| trans }}</label>
                            <input type="text" class="form-control" id="devi">
                        </div>
                        <div class="form-group col-md-4">
                            {{ form_row(form_intervenant.restePayer) }}
                        </div>
                        <div class="form-group col-md-2">
                            <label for="">{{ 'label.devise'| trans }}</label>
                            <input type="text" class="form-control" id="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form_intervenant, {'render_rest': false})  }}
