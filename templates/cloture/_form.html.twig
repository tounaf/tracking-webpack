<div class="card custom-card">
    <div class="card-header">
        <h2>Etat de clôture</h2>
    </div>
    <div class="card-body">
        <div class="form-bloc standard-form form-declaration-litige">
            {{ form_start(formCloture) }}
            {% if formCloture is defined %}
                <div class="row same-height m-b-30">
                    <div class="col-md-6">
                        <div class="card card-custom-2 m-0">
                            <div class="">
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="form-group date-form">
                                            {{ form_row(formCloture.dateCloture) }}
                                        </div>
                                    </div>
                                    <div class="col-xl-6">
                                        {{ form_row(formCloture.juridiction) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row same-height m-b-30">
                    <div class="col-md-6">
                        <div class="card card-custom-2 m-0">
                            <div class="card-header">
                                <h3>DECISION DE JUSTICE</h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-xl-6">
                                        {{ form_row(formCloture.decisionLitige) }}
                                    </div>
                                    <div class="col-xl-6">
                                        {{ form_row(formCloture.natureDecision) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-6">
                                        {{ form_row(formCloture.niveauDecision) }}
                                    </div>
                                    <div class="col-xl-6">
                                        {{ form_row(formCloture.sensDecision) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-6">
                                        {{ form_row(formCloture.risque) }}
                                    </div>
                                    <div class="col-xl-6">
                                        {{ form_row(formCloture.typeCloture) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="form-group">
                                            {{ form_row(formCloture.gainCondamnation) }}
                                        </div>
                                    </div>
                                    <div class="col-xl-4">
                                        {{ form_row(formCloture.montantGainCondamn) }}
                                    </div>
                                    <div class="col-xl-2">
                                        {{ form_row(formCloture.deviseGain) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card card-custom-2 m-0">
                            <div class="card-header">
                                <h3> MONTANT FINAL DU LITIGE</h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-10">
                                        {{ form_row(formCloture.montantInitial) }}
                                    </div>
                                    <div class="col-md-2">
                                        {{ form_row(formCloture.deviseInitial) }}
                                    </div>
                                    <div class="col-md-10">
                                        {{ form_row(formCloture.montantIntervenant) }}
                                    </div>
                                    <div class="col-md-2">
                                        {{ form_row(formCloture.deviseAvocat) }}
                                    </div>
                                    <div class="col-md-10">
                                        {{ form_row(formCloture.montantAuxiliaires) }}
                                    </div>
                                    <div class="col-md-2">
                                        {{ form_row(formCloture.deviseAuxiliaires) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            <div class="card card-custom-2">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group file-form">

                                <div id="filesProto" data-prototype="{{ form_widget(formCloture.pjClotures.vars.prototype)|e }}"></div>
                                <div class="row">
                                    <div class="col col-xs-12" id="filesBox">
                                        {#{% set pos = 0 %}#}
                                        {#{% for doc in formCloture.pjClotures %}#}
                                        {#<div class="row">#}
                                        {#<div class="col col-xs-1" id="jsRemove{{ pos }}" style="">#}
                                        {#<button type="button" class="btn btn-danger" id="jsBtnRemove{{ pos }}"><i class="fa fa-times" aria-hidden="true"></i></button>#}
                                        {#</div>#}
                                        {#<div class="col col-xs-11" id="jsPreview{{ pos }}">{{ doc.vars.value.name }}</div>#}
                                        {#<div class="col col-xs-11" id="jsPreview{{ pos }}">{{ doc.vars.value.infoPj }}</div>#}
                                        {#<div style="display:none">#}
                                        {#{{ form_widget(doc) }}#}
                                        {#</div>#}
                                        {#</div>#}
                                        {#{% set pos = pos + 1 %}#}
                                        {#{% endfor %}#}
                                        <button type="button " data-length="{{ formCloture.pjClotures|length }}" class="add_tag" hidden>Add a tag</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table id="listPJ" class="dataTable table table-striped">
                            <thead>
                            <th><span>N°</span></th>
                            <th><span>Date d'ajout dossier</span></th>
                            <th><span>Information PJ</span></th>
                            <th><span>Lien d'accès</span></th>
                            <th><span>Action</span></th>
                            </thead>
                            <tbody>
                            {% set pos = 0%}
                            {% set i = 1 %}
                            {% for doc in formCloture.pjClotures %}
                                <tr>
                                    <td>{{ i }}</td>
                                    <td></td>
                                    <td>{{ doc.vars.value.infoPj }}</td>
                                    <td>{{ doc.vars.value.name }}</td>
                                    <td class="actions">

                                    </td>
                                </tr>
                                {% set i = i + 1 %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {#{% include 'dossier/list_dossierpj.html.twig' %}#}
{#            {{ include('pj_cloture/form.html.twig') }}#}
            <div class="btns-group text-right">
                <button type="submit" class="btn btn-danger">{{ 'label.save'|trans }}</button>
            </div>
        </div>
        {% endif %}
        {{ form_end(formCloture,{'render_rest': false}) }}
    </div>
</div>
