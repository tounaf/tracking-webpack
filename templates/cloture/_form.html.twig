<div class="card custom-card">
    <div class="card-header">
        <h2>Etat de cl√¥ture</h2>
    </div>
    <div class="card-body">
        <div class="form-bloc standard-form form-declaration-litige">
            {{ form_start(formCloture, {'attr':{'id':'cloture-form'}}) }}
            {#{% if formCloture is defined %}#}
            <div class="row same-height m-b-30">
                <div class="col-md-6">
                    <div class="card card-custom-2 m-0">
                        <div class="">
                            <div class="row">
                                <div class="col-xl-6">
                                    <div class="form-group date-form">
                                        {{ form_row(formCloture.dateCloture) }}
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    {{ form_row(formCloture.juridiction) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="card card-custom-2 m-0">
                        <div class="card-header">
                            <h3>DECISION DE JUSTICE</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-6">
                                    {{ form_row(formCloture.decisionLitige) }}
                                </div>
                                <div class="col-xl-6">
                                    {{ form_row(formCloture.natureDecision) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-6">
                                    {{ form_row(formCloture.niveauDecision) }}
                                </div>
                                <div class="col-xl-6">
                                    {{ form_row(formCloture.sensDecision) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-6">
                                    {{ form_row(formCloture.risque) }}
                                </div>
                                <div class="col-xl-6">
                                    {{ form_row(formCloture.typeCloture) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-6 noMargin-xl-form-group">
                                        {{ form_row(formCloture.gainCondamnation) }}
                                </div>
                                <div class="col-xl-4 noMargin-xl-form-group">
                                    {{ form_row(formCloture.montantGainCondamn) }}
                                </div>
                                <div class="col-xl-2 noMargin-xl-form-group">
                                    {{ form_row(formCloture.deviseGain) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card card-custom-2 m-0">
                        <div class="card-header">
                            <h3> MONTANT DU LITIGE</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-10">
                                    {{ form_row(formCloture.montantInitial) }}
                                </div>
                                <div class="col-xl-2">
                                    {{ form_row(formCloture.deviseInitial) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-10">
                                    {{ form_row(formCloture.montantIntervenant) }}
                                </div>
                                <div class="col-xl-2">
                                    {{ form_row(formCloture.deviseAvocat) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-10 noMargin-xl-form-group">
                                    {{ form_row(formCloture.montantAuxiliaires) }}
                                </div>
                                <div class="col-xl-2 noMargin-xl-form-group">
                                    {{ form_row(formCloture.deviseAuxiliaires) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div style="display: none">
                <button type="submit" id="submitCloture" class="btn btn-danger">{{ 'label.save'|trans }}</button>
            </div>
            <br>
            {{ form_end(formCloture,{'render_rest': false}) }}
            {% if cloture is defined and cloture.id is not null %}
                <input type="text" value="{{ cloture.id }}" id="idcloture" hidden>
                {% include 'cloture/pjform.html.twig' with {'cloture': cloture, 'formPj': formPj} %}
                {% include 'cloture/list_pj.html.twig' with {'data-idCloture': cloture.id,} %}
            {% endif %}
        </div>
        {#{% endif %}#}
        {#{{ form_end(formCloture,{'render_rest': false}) }}#}
        <br>
        <div class="btns-group text-right">
            <button type="button" id="button-cloture-form" class="btn btn-danger">{{ 'label.save'|trans }}</button>
        </div>
    </div>
</div>
